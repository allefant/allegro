Import('context')
Import('env')
import addons

myEnv = env.Clone()

result = addons.do_build(
    context = context,
    env = myEnv,
    source = Split("""
        font.c
        fontbmp.c
        readfont.c
        text.c
     """),
    dir = 'font',
    name = 'a5_font',
    install_headers = ['allegro5/a5_font.h'],
    includes = ["../iio"]);

Return('result')
